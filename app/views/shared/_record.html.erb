<div class="content">
  <div class="content__left">
    <div class="content__left--image">
     
    </div>
  </div>
  <div class="content__right">
    <div class="content__right__top">
      <%= link_to record.title, record_path(record.id), class: "content__right__top--title" %>
    </div>
    <div class="content__right__bottom">
      <div class="content__right__bottom--userName">
        <%= link_to record.user.nickname, user_path(record.user), class: "content__right__bottom--userName--btn" %>
      </div>
      <div class="content__right__bottom--date">
        <%= record.created_at %>
      </div>
    </div>
  </div>
</div>